rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC: Allow read access to configuration and tickets
    match /config/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /tickets/{ticketId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
